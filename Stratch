-- Load Zypher UI Library
local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/GhostDuckyy/UI-Libraries/blob/main/Zypher/source.lua"))()
local main = library:CreateMain({
    projName = "Tyrant Hub",
    Resizable = true,
    MinSize = UDim2.new(0, 400, 0, 400),
    MaxSize = UDim2.new(0, 750, 0, 500),
})

-- Create tabs and sections
local catchingCategory = main:CreateCategory("Catching")
local catchingSection = catchingCategory:CreateSection("Magnets")

-- Initialize variables and services
local Workspace = game:GetService("Workspace")
local Players = game:GetService("Players")

local player = Players.LocalPlayer or Players.PlayerAdded:Wait()
local character = player.Character or player.CharacterAdded:Wait()
local HumanoidRootPart = character:FindFirstChild("HumanoidRootPart")

local magson = false
local range = 10
local delayon = false
local delay = 0.1

-- Function to handle magnets
local function handleMagnets()
    Workspace.ChildAdded:Connect(function(child)
        if child.Name == "Football" and child:IsA("BasePart") then
            if magson then
                if delayon then
                    wait(delay)
                end
                child.Size = Vector3.new(range, range, range)
                child.CanCollide = false
                child.CanCollide = false -- Ensure no collision with the player's character
                -- Optional: Set custom properties or materials if needed to avoid interaction
            else
                child.Size = Vector3.new(0.85, 1.2, 0.85)
                child.CanCollide = true -- Restore collision
            end
        end
    end)
end

-- Add UI elements
catchingSection:Create("Toggle", "Magnets", function(state)
    magson = state
    handleMagnets()
end, { default = false })

catchingSection:Create("Slider", "Range", function(value)
    range = value
end, { min = 1, max = 25, default = 10, increment = 0.1, valueName = "Range..." })

catchingSection:Create("Toggle", "Magnets Delay", function(state)
    delayon = state
end, { default = false })

catchingSection:Create("Slider", "Delay", function(value)
    delay = value
end, { min = 0, max = 1, default = 0, increment = 0.1, valueName = "Delay" })
